    {
      "name": "Search & Retrieval",
      "item": [
        {
          "name": "Semantic Search - Basic",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"restaurant expenses\",\n  \"top_k\": 10\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/search",
              "host": ["{{base_url}}"],
              "path": ["api", "search"]
            },
            "description": "Basic semantic search for restaurant expenses"
          }
        },
        {
          "name": "Semantic Search - With Filters",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"travel and hotel bookings\",\n  \"top_k\": 5,\n  \"category\": \"Travel\",\n  \"min_amount\": 5000,\n  \"max_amount\": 50000\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/search",
              "host": ["{{base_url}}"],
              "path": ["api", "search"]
            },
            "description": "Search with category and amount filters"
          }
        },
        {
          "name": "Semantic Search - User Specific",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"shopping and entertainment\",\n  \"top_k\": 10,\n  \"user_id\": \"USER001\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/search",
              "host": ["{{base_url}}"],
              "path": ["api", "search"]
            },
            "description": "Search transactions for specific user"
          }
        },
        {
          "name": "Get All Transactions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/transactions?limit=50",
              "host": ["{{base_url}}"],
              "path": ["api", "transactions"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            },
            "description": "Get all transactions with limit"
          }
        },
        {
          "name": "Get User Transactions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/transactions?user_id=USER001&limit=100",
              "host": ["{{base_url}}"],
              "path": ["api", "transactions"],
              "query": [
                {
                  "key": "user_id",
                  "value": "USER001"
                },
                {
                  "key": "limit",
                  "value": "100"
                }
              ]
            },
            "description": "Get transactions for specific user"
          }
        },
        {
          "name": "Get Category Transactions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/transactions?category=Food & Dining&limit=50",
              "host": ["{{base_url}}"],
              "path": ["api", "transactions"],
              "query": [
                {
                  "key": "category",
                  "value": "Food & Dining"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            },
            "description": "Get transactions by category"
          }
        },
        {
          "name": "Get Transactions with Pagination",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/transactions?limit=20&offset=0",
              "host": ["{{base_url}}"],
              "path": ["api", "transactions"],
              "query": [
                {
                  "key": "limit",
                  "value": "20",
                  "description": "Number of transactions per page"
                },
                {
                  "key": "offset",
                  "value": "0",
                  "description": "Number of transactions to skip"
                }
              ]
            },
            "description": "Get transactions with pagination support. Use offset to navigate pages."
          }
        }
      ]
